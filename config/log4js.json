{
    "appenders" : {
        "access" : {
            "type" : "DateFile",
            "filename" : "logs/access/access.log",
            "pattern" : ".yyyy-MM-dd",
            "alwaysIncludePattern" : true,
            "maxLevel" : "trace"
        },
        "error" : {
            "type" : "DateFile",
            "filename" : "logs/error/error.log",
            "pattern" : ".yyyy-MM-dd",
            "alwaysIncludePattern" : true
        },
        "default" : {
            "type" : "DateFile",
            "filename" : "logs/default/default.log",
            "pattern" : ".yyyy-MM-dd",
            "alwaysIncludePattern" : true
        }
    },
    "categories" : {
        "default" : {
            "appenders" : ["default"],
            "level" : "all"
        },
        "access" : {
            "appenders" : ["access"],
            "level" : "trace"
        },
        "error" : {
            "appenders" : ["error"],
            "level" : "error"
        }
    }
}